<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Étudiants</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/header') %>

  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-primary">Étudiants</h1>
      <a href="/etudiants/ajout" class="btn btn-success">Ajouter un étudiant</a>
    </div>

    <div class="row">
      <% etudiants.forEach(e => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow h-100">
            <div class="card-body">
              <h5 class="card-title"><%= e.prenom %></h5>
              <h6 class="card-subtitle text-muted"><%= e.email %></h6>
              <p class="card-text mt-3">
                <strong>Date de naissance :</strong> <%= e.date_naissance.toDateString() %><br>
                <strong>Téléphone :</strong> <%= e.numero_tel %><br>
                <strong>Classe :</strong> <%= e.classe?.nom_classe || 'Non attribuée' %><br>
                <strong>Correspondant :</strong> <%= e.correspondant?.nom || 'Non défini' %><br>
                <strong>Absences :</strong>
                <% if (e.absences.length > 0) { %>
                  <ul>
                    <% e.absences.forEach(abs => { %>
                      <li>
                        <%= abs.contenu?.matiere?.nom || 'Matière inconnue' %> :
                        <%= abs.justifiee ? 'Justifiée' : 'Non justifiée' %>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  Aucune absence
                <% } %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>