<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Banio - Gestion des Absences</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/header') %>

  <div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="text-danger">Absences</h1>
      <a href="/absence/ajout" class="btn btn-success">Ajouter une absence</a>
    </div>

    <div class="row">
      <% absences.forEach(abs => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow">
            <div class="card-body">
              <h5 class="card-title text-primary"><%= abs.etudiant?.prenom %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= abs.etudiant?.email %></h6>
              <p class="card-text">
                <strong>Matière :</strong> <%= abs.contenu?.matiere?.nom || 'Non défini' %><br>
                <strong>Justifiée :</strong>
                <span class="<%= abs.justifiee ? 'text-success' : 'text-danger' %>">
                  <%= abs.justifiee ? 'Oui' : 'Non' %>
                </span>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>