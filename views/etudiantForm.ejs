<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ajouter un Étudiant</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/header') %>

  <div class="container my-5">
    <h1 class="mb-4 text-success">Ajouter un étudiant</h1>

    <form action="/etudiants/ajout" method="POST">
      <div class="mb-3">
        <label for="prenom" class="form-label">Prénom</label>
        <input type="text" name="prenom" id="prenom" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="date_naissance" class="form-label">Date de naissance</label>
        <input type="date" name="date_naissance" id="date_naissance" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="numero_tel" class="form-label">Numéro de téléphone</label>
        <input type="text" name="numero_tel" id="numero_tel" class="form-control" required>
      </div>
      <div class="mb-3">
        <label for="classe" class="form-label">Classe</label>
        <select name="classe" id="classe" class="form-select">
          <option value="">-- Sélectionner --</option>
          <% classes.forEach(cl => { %>
            <option value="<%= cl._id %>"><%= cl.nom_classe %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label for="correspondant" class="form-label">Correspondant</label>
        <select name="correspondant" id="correspondant" class="form-select">
          <option value="">-- Aucun --</option>
          <% correspondants.forEach(c => { %>
            <option value="<%= c._id %>"><%= c.nom %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>