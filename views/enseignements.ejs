<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Liste des Enseignants</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <style>
    .enseignant-card {
      transition: box-shadow 0.3s ease;
    }
    .enseignant-card:hover {
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    .matiere-badge {
      margin: 2px;
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold">ğŸ“˜ Liste des Enseignants</h2>
      <a href="/enseignant/ajout" class="btn btn-success"><i class="bi bi-plus-circle"></i> Ajouter un enseignant</a>
    </div>

    <% if (enseignants.length > 0) { %>
      <div class="row">
        <% enseignants.forEach(enseignant => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <div class="card enseignant-card h-100">
              <div class="card-body">
                <h5 class="card-title"><i class="bi bi-person-fill"></i> <%= enseignant.prenom %> <%= enseignant.nom %></h5>
                <p class="card-text text-muted"><i class="bi bi-envelope"></i> <%= enseignant.email %></p>

                <h6 class="mt-3 text-primary"><i class="bi bi-journal-bookmark-fill"></i> MatiÃ¨res</h6>
                <% if (enseignant.matieres && enseignant.matieres.length > 0) { %>
                  <% enseignant.matieres.forEach(matiere => { %>
                    <span class="badge bg-info text-dark matiere-badge"><%= matiere.nom %></span>
                  <% }) %>
                <% } else { %>
                  <p class="text-muted">Aucune matiÃ¨re assignÃ©e</p>
                <% } %>

                <h6 class="mt-4 text-primary"><i class="bi bi-calendar-event-fill"></i> SÃ©ances</h6>
                <% if (enseignant.seances && enseignant.seances.length > 0) { %>
                  <ul class="list-unstyled">
                    <% enseignant.seances.forEach(seance => { %>
                      <li><i class="bi bi-clock"></i> <%= seance.date_seance.toLocaleDateString("fr-FR") %> - 
                        <%= seance.creneau ? seance.creneau.heure_debut + " Ã  " + seance.creneau.heure_fin : 'Heure inconnue' %>
                      </li>
                    <% }) %>
                  </ul>
                <% } else { %>
                  <p class="text-muted">Aucune sÃ©ance prÃ©vue</p>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-info">Aucun enseignant enregistrÃ© pour le moment.</div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
