<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Classes</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../partials/header') %>

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Classes</h1>
      <!-- <a href="/classes/ajout" class="btn btn-success">Ajouter une classe</a> -->
    </div>

    <div class="row">
      <% classes.forEach(classe => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title text-primary"><%= classe.nom_classe %></h5>
              <p class="card-text"><strong>Étudiants :</strong> <%= classe.etudiants.length %></p>
              <p class="card-text"><strong>Matières :</strong>
                <% if (classe.contenus.length > 0) { %>
                  <%= classe.contenus.map(c => c.matiere ? c.matiere.nom : 'Non défini').join(', ') %>
                <% } else { %>
                  Aucune matière
                <% } %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>